extends layout

block content
  form(method='POST' action='/sanitize')
    div.form-group
      label(for='name') Email:
      br
      input#name.form-control(type='text', placeholder='example@email.com' name='email')
    div.form-group
      label(for='email') Password:
      br
      input#email.form-control(type='password', placeholder='Password' name='password')
    button.btn.btn-primary(type='submit' class="button") Login
