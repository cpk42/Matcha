extends layout

block content
  h2 Sign Up
  form(method='POST' action='/sanitize')
      div.form-group
        label(for='name') Name:
        br
        input#name.form-control(type='text', placeholder='First and last' name='name')
      div.form-group
        label(for='email') Email:
        br
        input#email.form-control(type='email', placeholder='name@email.com' name='email')
      div.form-group
        label(for='gender') Gender:
        br
        input#email.form-control(type='text', placeholder='Input your sex' name='gender')
      div.form-group
        label(for='info') Information:
        br
        input#email.form-control(type='text', placeholder='Tell us about yourself' name='info')
      div.form-group
        label(for='pw') Password:
        br
        input#pw.form-control(type='password' name='password')
      div.form-group
        label(for='pw2') Confirm Password:
        br
        input#pw2.form-control(type='password' name='confirmPassword')
      button.btn.btn-primary(type='submit' class="button") Sign up
